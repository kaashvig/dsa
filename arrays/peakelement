#include <iostream>
#include <vector>
using namespace std;

int findPeakElement(vector<int>& nums) {
    int s = 0;
    int e = nums.size() - 1;

    while (s < e) {
        int mid = s + (e - s) / 2;

        if (nums[mid] > nums[mid + 1]) {
            e = mid; // Peak is on the left or at mid
        } else {
            s = mid + 1; // Peak is on the right
        }
    }

    return s; // or return e (both are same here)
}

int main() {
    vector<int> nums = {1, 2, 1, 3, 5, 6, 4};

    int peakIndex = findPeakElement(nums);
    cout << "Peak element is at index: " << peakIndex << endl;
    cout << "Peak element is: " << nums[peakIndex] << endl;

    return 0;
}

      
