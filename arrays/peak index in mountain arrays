class Solution {
public:
    int peakIndexInMountainArray(vector<int>& arr) {
        int s = 0;
        int e = arr.size() - 1;

        while (s < e) {
            int mid = s + (e - s) / 2;

            if (arr[mid] > arr[mid + 1]) {
                // mid might be the peak, look on the left (including mid)
                e = mid;
            } else {
                // mid is in the increasing slope, look right
                s = mid + 1;
            }
        }

        return s; // or return e, both are same here
    }
};

